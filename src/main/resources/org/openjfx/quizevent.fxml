<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>
<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openjfx.QuizEventController" minWidth="900">
    <content>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <Text fx:id="eventText" wrappingWidth="850" textAlignment="LEFT"></Text>
                <HBox fx:id="buttonBox" alignment="CENTER" spacing="10.0">
                    <Button fx:id="acceptButton" text="Accept" onAction="#doQuiz"/>
                    <Button fx:id="refuseButton" text="Refuse" onAction="#refuseQuiz"/>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
