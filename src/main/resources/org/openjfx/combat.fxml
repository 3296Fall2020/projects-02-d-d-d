<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox maxWidth="-Infinity" minWidth="900" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.CombatController">
    <children>
      <Pane maxWidth="-Infinity" minWidth="150.0" prefHeight="200.0" prefWidth="150.0">
         <children>
               <Text fx:id="combatDetails" textAlignment="LEFT" wrappingWidth="125.0" />
         </children>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
         </HBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </Pane>
      <ScrollPane maxWidth="600.0" minWidth="600.0" prefHeight="200.0" prefWidth="600.0">
         <content>
              <VBox alignment="CENTER" maxWidth="-Infinity" minWidth="575.0" prefWidth="575.0" spacing="20.0">
                  <Text fx:id="description" textAlignment="LEFT" wrappingWidth="500.0" />
                  <Text fx:id="enemyTurnDescription" textAlignment="LEFT" wrappingWidth="500.0">
            </Text>
                  <HBox fx:id="buttonBox" alignment="CENTER" maxWidth="-Infinity" minWidth="550.0" prefWidth="500.0" spacing="10.0">
                      <Button fx:id="examineButton" onAction="#examine" text="Examine" />
                      <Button fx:id="attackButton" onAction="#attack" text="Attack" />
                      <Button fx:id="healButton" onAction="#heal" text="Heal" />
                      <Button fx:id="fleeButton" onAction="#flee" text="Flee" />
                  </HBox>
                  <Button fx:id="endCombatButton" onAction="#endCombat" text="Return" />
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
              </VBox>
         </content>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </ScrollPane>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
