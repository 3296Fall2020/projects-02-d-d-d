<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.CombatController">
    <children>
        <Label text="Combat screen" />
        <Label fx:id="description">
            Combat has begun!
        </Label>
        <Button fx:id="startCombat" text="startCombat" onAction="#createCombat"/>
        <Button fx:id="attackButton" text="Attack" onAction="#attack"/>
        <Button fx:id="primaryButton" text="Switch to Secondary View" onAction="#attack"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
