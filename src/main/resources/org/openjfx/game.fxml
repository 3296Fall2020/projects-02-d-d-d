<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>
<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openjfx.Game" minWidth="900">
    <content>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="ventureButton" text="Venture Forth" onAction="#venture"/>
                <Button fx:id="getEventButton" text="Test Event" onAction="#getEvent"/>
                <Button fx:id="initCombatButton" text="Start Combat" onAction="#initCombat"/>
                <Button fx:id="quizButton" text="Math Quiz" onAction="#loadQuiz"/>
                <Button fx:id="charButton" text="Customize Character" onAction="#customizeCharacter"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
