<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.text.Font?>
<ScrollPane minWidth="900" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openjfx.QuizEndscreenController">
    <content>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="20.0">
            <children>
                <SplitPane dividerPositions="0.5" prefHeight="500.0" prefWidth="200.0">
                    <items>
                        <VBox alignment="CENTER" maxWidth="170.0" minHeight="200.0" minWidth="170.0" prefHeight="198.0" prefWidth="218.0">
                            <children>
                                <VBox alignment="CENTER" maxWidth="200.0" minWidth="151.0" prefHeight="198.0" prefWidth="151.0" spacing="10.0">
                                    <children>
                                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                                            <children>
                                                <Text fx:id="characterStats" wrappingWidth="700" textAlignment="CENTER" ><font><Font size = "12.0"></Font></font></Text>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Text fx:id="eventText" wrappingWidth="600"></Text>
                                <HBox alignment="CENTER" prefHeight="149.0" prefWidth="500.0" spacing="10.0">
                                    <children>
                                        <Button fx:id="exitButton" text= "Return" onAction="#exitQuiz"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>